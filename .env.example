# ====================================
# OpenAI Configuration
# ====================================
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...
OPENAI_API_VERSION=2024-10-01

# ====================================
# Vector Database (Qdrant)
# ====================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=documents
QDRANT_VECTOR_SIZE=3072

# ====================================
# Web Search (Firecrawl)
# ====================================
FIRECRAWL_API_KEY=
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# ====================================
# Database
# ====================================
DATABASE_URL=sqlite:///db.sqlite3
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ====================================
# Langfuse Monitoring (optional)
# ====================================
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com
LANGFUSE_ENABLED=false

# ====================================
# Email Configuration (optional)
# ====================================
FROM_EMAIL=no-reply@example.com
USER_EMAIL=user@example.com
RESEND_API_KEY=

# ====================================
# Spotify Configuration (optional)
# ====================================
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:3000/spotify/callback

# ====================================
# Google Configuration (optional)
# ====================================
GOOGLE_MAPS_API_KEY=
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_REDIRECT_URI=https://ai.overment.com/authorize

# ====================================
# SMS Configuration (optional)
# ====================================
SMSAPI_API_KEY=
SMSAPI_FROM_PHONE=

# ====================================
# YouTube Configuration (optional)
# ====================================
YOUTUBE_API_KEY=

# ====================================
# Server Configuration
# ====================================
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
ENVIRONMENT=development

# ====================================
# Fine-tuning Configuration
# ====================================
FINE_TUNING_MODEL=gpt-4-mini
FINE_TUNING_EPOCHS=3
FINE_TUNING_BATCH_SIZE=1
FINE_TUNING_LEARNING_RATE=1e-4

# ====================================
# Feature Flags
# ====================================
ENABLE_WEB_SEARCH=true
ENABLE_VISION=true
ENABLE_STREAMING=true
ENABLE_FINE_TUNING=false
ENABLE_AGENTS=true
ENABLE_RAG=true
